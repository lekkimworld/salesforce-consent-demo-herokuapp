<h1 class="font-extrabold text-gray-900 text-2xl pt-6">My Fitness Shop</h1>
{{#if user}}
{{else}}
<p class="text-gray-600 text-xs">
  To buy products from the shop you need to be logged in.
</p>
{{/if}}
<div class="grid sm:grid-cols-2 gap-4 pt-4">
  {{#each categories}}
  <div>
    <img src="/images/{{this.image}}" alt="{{this.name}}" class="w-20 h-20 rounded-md object-scale-down">
    <h2 class="text-xl text-gray-900 font-medium pt-4">{{this.name}}</h2>
    <p class="text-gray-700 text-sm pt-2">
      {{this.description}}
    </p>
    <a href="/shop/{{this.name}}" class="text-blue-400 text-sm mt-6">Browse {{this.name}}</a>
  </div>
  {{/each}}
</div>

<script>
  window.SalesforceConsentDemo.onTelemetryReady(() => {
    window.SalesforceConsentDemo.sendPageViewTelemetryEvent({
      pageName: "shop"
    })
  })
</script>