<h1 class="font-extrabold text-gray-900 text-2xl pt-6">My Fitness Shop / <a href="/shop/{{category}}">{{category}}</a></h1>
{{#if user}}
  {{#if user.terms.order}}
  {{else}}
    <p class="text-gray-600 text-xs">
      You've not accepted the terms for shopping with us do you cannot add products to the cart.
    </p>    
  {{/if}}
{{else}}
<p class="text-gray-600 text-xs">
  To buy products from the shop you need to be logged in.
</p>
{{/if}}
<div class="grid sm:grid-cols-2 gap-4 pt-4">
  <div class="pt-4">
    <img src="/images/coming_soon.png" alt="{{partno}}" class="w-20 h-20 rounded-md object-scale-down">
    <h2 class="text-xl text-gray-900 font-medium pt-1">{{name}}</h2>
    <p class="text-gray-700 text-sm pt-2">
      {{description}}
    </p>
  </div>
  <div class="pt-4 pl-4">
    {{#if user.terms.order}}
    <a href="#" id="btn_add_cart" class="bg-green-500 text-center text-white rounded-md p-2 uppercase">Add to cart</a>
    {{/if}}
  </div>
</div>

<script>
  window.SalesforceConsentDemo.onTelemetryReady(() => {
    window.SalesforceConsentDemo.sendCatalogTelemetryEvent(
      {
        "type": "product",
        "id": "{{partno}}",
        "attributes": {
          "category": "{{category}}",
          "name": "{{name}}",
          "sku": "{{partno}}"
        }
      }
    )
  })
</script>